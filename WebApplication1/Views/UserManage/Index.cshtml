@{
    ViewData["Title"] = "ユーザー管理";
    var isValidList = ViewBag.IsValidList as List<SelectListItem>;
    var userGroups = ViewBag.UserGroups as List<SelectListItem>;
}

@*https://fontawesome.com/icons*@
<div class="card shadow">
    <div class="col-sm-12" style="margin-top:20px;">
        <button class="btn btn-sm btn-primary" onclick="jQueryModalGet('@Url.Action("GetCreateOrEdit", "UserManage")','ユーザー登録')">
            <i class="fas fa-user-plus fa-lg faa-tada animated-hover"></i> ユーザー作成
        </button>
        <button class="btn btn-sm btn-primary" onclick="jQueryModalGet('@Url.Action("GetCreateOrEdit", "UserManage")','ユーザー登録')">
            <i class="pointer fas fa-pen faa-wrench animated-hover"></i> 一括修正
        </button>
        <button class="btn btn-sm btn-primary" onclick="jQueryModalGet('@Url.Action("GetCreateOrEdit", "UserManage")','ユーザー登録')">
            <i class="pointer fas fa-trash-alt faa-wrench animated-hover"></i> 一括削除
        </button>
        <button id="reload" class="btn btn-sm btn-primary">
            <i class="fas fa-sync-alt faa-spin animated-hover"></i> 再読み込み
        </button>
    </div>
    <div id="viewAll" class="card-body table-responsive"></div>
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>

    <script>
            $(function () {

            $('#viewAll').load('@Url.Action("OnGetViewAllPartial", "UserManage")');

            $('#reload').on('click', function () {
                $('#viewAll').load('@Url.Action("OnGetViewAllPartial", "UserManage")');
            });

                $('#download').click(function () {
                location.href = '@Url.Action("Download", "UserManage")';
            });
        });
    </script>
}
